<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Become Admin</title>
  </head>
  <body
    style="
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background-color: #f4f4f4;
    ">
    <h1 style="color: #333; text-align: center">Become an Admin</h1>

    <% if (messages.error) { %>
    <div
      style="
        color: #ff4d4d;
        background: #ffe5e5;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        text-align: center;
      ">
      <%= messages.error %>
    </div>
    <% } %> <% if (messages.info) { %>
    <div
      style="
        color: #4caf50;
        background: #dff0d8;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        text-align: center;
      ">
      <%= messages.info %>
    </div>
    <% } %>

    <form
      action="/become-admin"
      method="POST"
      style="
        display: flex;
        flex-direction: column;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
      ">
      <label for="code" style="margin-bottom: 8px; font-weight: bold"
        >Enter Admin Passcode:</label
      >
      <input
        type="password"
        id="code"
        name="code"
        required
        style="
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          margin-bottom: 15px;
          width: 100%;
        " />
      <button
        type="submit"
        style="
          padding: 10px;
          background: #007bff;
          color: white;
          border: none;
          border-radius: 5px;
          cursor: pointer;
        ">
        Submit
      </button>
    </form>

    <a
      href="/"
      style="
        margin-top: 15px;
        display: inline-block;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
      "
      >Go back</a
    >
  </body>
</html>
